<% 21.times.each do |i| %>
  <div class="col-md-4">
    <div class="card card-outline card-primary">
      <div class="card-header">
        <h3 class="card-title">No. <%= i + 1 %></h3>
        <div class="card-tools">
          <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i>
          </button>
        </div>
      </div>
      <div class="card-body" style="display: block;">
        <div id="accordion">
          <% if @reservations[i+1] %>
            <% @reservations[i+1].each do |reservations| %>
              <div class="card">
                <div class="card-header">
                  <h4 class="card-title">
                    <span class="">
                      <%= reservations.user.name %>
                    </span>
                    <span class="bg-primary">
                      <%=  reservations.booking_at.strftime("%H:%M")  %>
                    </span>
                  </h4>
                </div>
                <div class="card-footer p-0">
                <ul class="nav flex-column">
                  <% if reservations.number_of_customer.present? %>
                    <li class="nav-item">
                      <span class="nav-link">
                        Number of customer: <%= reservations.number_of_customer %>
                      </span>
                    </li>
                  <% end %>
                  <% if reservations.user.mobile.present? %>
                    <li class="nav-item">
                      <span class="nav-link">
                        Contact: <%= reservations.user.mobile %>
                      </span>
                    </li>
                  <% end %>
                  <% if reservations.remark.present? %>
                    <li class="nav-item">
                      <span class="nav-link">
                        Remark: <%= reservations.remark %>
                      </span>
                    </li>
                  <% end %>
                </ul>
              </div>
              </div>
            <% end %>
          <% else %>
          <% end %>
        </div>
      </div>
      <!-- /.card-body -->
    </div>
    <!-- /.card -->
  </div>
<% end %>
