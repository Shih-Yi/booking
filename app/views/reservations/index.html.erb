<div class="content-wrapper" style="min-height: 1116.5px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Reservations</h1>
          </div>
          <div class="col-sm-4">
          </div>
          <div class="col-sm-2">
            <%= link_to 'Create Reservation', new_reservation_path, class: "btn btn-block btn-outline-success" %>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title">Reservations List</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
              <table class="table table-bordered table-hover" id="the_datatable" width="100%">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Contact</th>
                    <th>Number of customer</th>
                    <th>Table number</th>
                    <th>Booking at</th>
                    <th>Remark</th>
                    <th>Settings</th>
                  </tr>
                </thead>
              </table>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->


          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>

<script>
  $(function () {
    $("#the_datatable").DataTable({
      responsive: true,
      "ajax":  {
        "url": "/reservations",
        "type": "GET",
        "contentType": 'application/json',
        "dataSrc": '',
        "complete": function(xhr, responseText){
          console.log(xhr.responseJSON);
          console.log(responseText); //*** responseJSON: Array[0]
        }
      },
      "columns": [
        { "data": "user.name" },
        { "data": "user.mobile"},
        { "data": "number_of_customer"},
        { "data": "table_number"},
        { "data": "booking_at"},
        { "data": "remark"},
        { "data": function (data, type, full, meta) {
          return '<a href="/reservations/' + data.id + '/edit"><i class="far fa-edit fa-2x"></i></a>' + '  ' +
          '<span class="res-destroy" data-id="' +  data.id + '"><i class="far fa-times-circle fa-2x"></i></span>'
          ; }},
      ],
      "columnDefs": [
        {
            targets: [1],
            className: 'text-center'
        }
      ],
    });
  });

$(document).on('click', ".res-destroy",
  function(){
    if (confirm('Are you sure you want to delete this?')) {
      let id = $(this).data("id")
      $.ajax({
        url: "/reservations/" + id,
        method: 'delete',
      })
      .done(function (ret) {
        $('#the_datatable').DataTable().ajax.reload();
        $(document).Toasts('create', {
          delay: 5000,
          autohide: true,
          class: 'bg-danger',
          title: 'Success',
          body: ret.result,
        })
      })
    }
  }
)

</script>

