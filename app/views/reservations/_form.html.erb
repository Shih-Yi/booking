<div class="main-content" style="min-height: 616px;">
  <section class="section">
    <div class="section-header">
      <h1>Booking Forms</h1>
      <div class="section-header-breadcrumb">
        <div class="breadcrumb-item active"><a href="#">Dashboard</a></div>
        <div class="breadcrumb-item"><a href="#">Forms</a></div>
        <div class="breadcrumb-item">Booking Forms</div>
      </div>
    </div>

    <div class="section-body">
      <h2 class="section-title">Booking</h2>
      <p class="section-lead">Please fill out the form below.</p>

      <div class="row">

        <%= form_for @reservation , html: { class: "col-12 col-md-6 col-lg-6" } do |f| %>
            <div class="card">
              <div class="card-header">
                <h4>Table Booking</h4>
              </div>
              <div class="card-body">
                <%= f.fields_for :user, @user do |ff| %>
                  <div class="form-group">
                    <%= label_tag("Name") %>
                    <%= ff.text_field :name, class: "form-control", placeholder: "name" %>
                  </div>
                  <div class="form-group">
                    <%= label_tag("Email") %>
                    <%= ff.text_field :email, class: "form-control", placeholder: "email", required: "" %>
                    <div class="invalid-feedback">
                      Oh no! Email is invalid.
                    </div>
                  </div>
                  <div class="form-group">
                    <%= label_tag("Phone Number") %>
                    <div class="input-group">
                      <div class="input-group-prepend">
                        <div class="input-group-text">
                          <i class="fa fa-phone"></i>
                        </div>
                      </div>
                      <%= ff.text_field :mobile, class: "form-control phone-number", placeholder: "phone" %>
                    </div>
                  </div>
                <% end %>

                <%= label_tag("Name") %>
                <%= f.text_field :order_number, class: "form-control", placeholder: "order name" %>
                <div class="form-group">
                  <label>Date</label>
                  <%= f.text_field :booking_at, class: "form-control", placeholder: "booking_at" %>
                </div>
                <%= f.submit "submit", class: "btn btn-primary" %>
              </div>
            </div>
        <% end %>
      </div>
    </div>
  </section>
</div>
